{
  "name": "idiosyncratic/graphql-server",
  "type": "library",
  "license": "EUPL-1.2",
  "description": "Idiosyncratic GraphQL Server",
  "homepage": "https://github.com/idiosyncratic-code/php-graphql-server",
  "support": {
    "source": "https://github.com/idiosyncratic-code/php-graphql-server"
  },
  "require": {
    "php": ">=8.2",
    "psr/http-factory": "^1.0",
    "thecodingmachine/safe": "^3.0",
    "webonyx/graphql-php": "^15.18"
  },
  "autoload": {
    "psr-4": {
      "Idiosyncratic\\GraphQL\\Server\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Idiosyncratic\\GraphQL\\Server\\": "test"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "idiosyncratic/coding-standard": "^3.1",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.11",
    "phpstan/phpstan-strict-rules": "^1.5",
    "qossmic/deptrac-shim": "^1.0",
    "symfony/var-dumper": "^6.3"
  }
}
